{
  "name": "task-management-monorepo",
  "version": "1.0.0",
  "description": "Secure Task Management System with RBAC",
  "scripts": {
    "api:install": "cd apps/api && npm install",
    "dashboard:install": "cd apps/dashboard && npm install",
    "install:all": "npm run api:install && npm run dashboard:install",
    "api:dev": "cd apps/api && npm run start:dev",
    "dashboard:dev": "cd apps/dashboard && npm start",
    "api:build": "cd apps/api && npm run build",
    "dashboard:build": "cd apps/dashboard && npm run build",
    "api:test": "cd apps/api && npm test",
    "dashboard:test": "cd apps/dashboard && npm test",
    "seed": "cd apps/api && mkdir -p data && npx ts-node src/seed.ts"
  },
  "keywords": [
    "task-management",
    "rbac",
    "nestjs",
    "angular",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}
